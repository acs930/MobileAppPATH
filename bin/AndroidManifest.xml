<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.wit.apppath"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.NFC" />

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="21" />

    <uses-feature
        android:name="android.hardware.nfc"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Map"
            android:label="@string/title_activity_map" >
        </activity>
        <activity
            android:name=".Directions"
            android:label="@string/title_activity_directions" >
        </activity>
        <activity
            android:name=".NFC"
            android:label="@string/title_activity_nfc" >
        </activity>
        <activity
            android:name=".FloorSelect"
            android:label="@string/title_activity_floor_select" >
        </activity>
        <activity
            android:name=".DirectionDisplay"
            android:label="@string/title_activity_direction_display" >
        </activity>
        <activity
            android:name=".NFCLocation"
            android:label="@string/title_activity_nfclocation" >
        </activity>
        <activity
            android:name=".NFCWentworthFirst"
            android:label="@string/title_activity_nfcwentworth_first" >
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="application/nfc.path.wentfirst" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NFCDobbsFirst"
            android:label="@string/title_activity_nfcdobbs_first" >
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="application/nfc.path.dobbfirst" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NFCWillstonFirst"
            android:label="@string/title_activity_nfcwillston_first" >
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="application/nfc.path.wiltfirst" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NFCWatsonFirst"
            android:label="@string/title_activity_nfcwatson_first" >
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="application/nfc.path.watsfirst" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NFCKingmanFirst"
            android:label="@string/title_activity_nfckingman_first" >
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="application/nfc.path.kingfirst" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NFCRubensteinFirst"
            android:label="@string/title_activity_nfcrubenstein_first" >
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="application/nfc.path.rubefirst" />
            </intent-filter>
        </activity>
    </application>

</manifest>
